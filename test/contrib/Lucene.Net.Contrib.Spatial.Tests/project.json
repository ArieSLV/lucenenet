{
  "title": "Lucene.Net Contrib Spatial Tests",
  "version": "3.0.4",

  "buildOptions": {
    "compile": [ "**/*.cs" ],
    "emitEntryPoint": true
  },

  "commands": {
    "test": "Lucene.Net.Contrib.Spatial.Tests"
  },

  "configurations": {
    "Release": {
      "buildOptions": {
        "optimize": true
      }
    }
  },

  "dependencies": {
    "Lucene.Net": "3.0.4",
    "Lucene.Net.Contrib.Spatial.NTS": "3.0.4",
    "Lucene.Net.Test": "3.0.4",
    "Spatial4n.Core": "0.3.1",
    "GeoAPI": "1.7.5",
    "NetTopologySuite": "1.15"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "buildOptions": {
        "define": [ "DNXCORE50" ]
      },
      "dependencies": {
        "Microsoft.CSharp": "4.0.1",
        "NETStandard.Library": "1.6.0",
        "NUnitLite": "3.2.1",

        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        }
      },
      "imports": [
        "dotnet",
        "dnxcore50"
      ]
    }
  }
}
