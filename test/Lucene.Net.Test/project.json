{
  "title": "Lucene.Net.Test",
  "version": "3.0.4",
  "compile": [ "**/*.cs" ],

  "buildOptions": {
    "keyFile": "Lucene.Net.snk",
    "compile": [ "**/*.cs" ],
    "emitEntryPoint": true
  },

  "configurations": {
    "Release": {
      "buildOptions": {
        "optimize": true
      }
    }
  },

  "commands": {
    "test": "Lucene.Net.Test"
  },

  "dependencies": {
    "Demo.Common": "3.0.4",
    "Lucene.Net": "3.0.4",
    "NUnitLite": "3.2.1"
  },

  "frameworks": {
    "netcoreapp1.0": {
      "buildOptions": {
        "define": [ "DNXCORE50" ]
      },
      "dependencies": {
        "Microsoft.CSharp": "4.0.1",
        "Microsoft.Extensions.PlatformAbstractions": "1.0.0",
        "NETStandard.Library": "1.6.0",
        "System.Diagnostics.StackTrace": "4.0.1",
        "System.Threading.Tasks.Parallel": "4.0.1",
        "System.Threading.ThreadPool": "4.0.10",
        "System.Collections.NonGeneric": "4.0.1",

        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        }
      },
      "imports": [
        "dotnet",
        "dnxcore50"
      ]
    }
  }
}
